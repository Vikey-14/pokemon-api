# -------------------------------------------------------------------
# 🌐 PokéCenter API — Environment Configuration Template (.env.example)
# Copy this file as `.env` and fill in actual values before running.
# -------------------------------------------------------------------

# ──────────────────────────────────────────────
# General Environment
# ──────────────────────────────────────────────
APP_ENV=development         # Options: development, test, production
DEBUG=True                  # Enable detailed error messages in dev

# ──────────────────────────────────────────────
# 🔐 JWT Authentication
# ──────────────────────────────────────────────
SECRET_KEY=your_secret_key_here    # Generate a strong secret key for prod!
JWT_ALGORITHM=HS256
TOKEN_EXPIRY_MINUTES=60

# ──────────────────────────────────────────────
# 📁 File Upload Settings
# ──────────────────────────────────────────────
UPLOAD_DIR=uploads
ALLOWED_IMAGE_TYPES=image/         # Supports image/png, image/jpeg, etc.

# ──────────────────────────────────────────────
# 🛡️ HTTPS & Testing
# ──────────────────────────────────────────────
FORCE_HTTPS=0               # Set to 1 in prod to force HTTPS redirects
TESTING=0                   # Set to 1 during pytest runs for safe test mode
